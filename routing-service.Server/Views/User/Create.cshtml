@model routing_service.Server.Models.User

<h2>Создание учётной записи</h2>
<form asp-action="create" asp-controller="user">
    <p>
        <label asp-for="fullName">Имя</label><br />
        <input type="text" asp-for="fullName" />
    </p>
    <p>
        <label asp-for="login">Логин</label><br />
        <input type="text" asp-for="login" />
    </p>
    <p>
        <label asp-for="password">Пароль</label><br />
        <input type="password" asp-for="password" />
    </p>
    <p>
        <label asp-for="dateOfBirth">Дата рождения</label><br />
        <input type="date" asp-for="dateOfBirth" />
    </p>
    <p>
        <label asp-for="mail">Почта</label><br />
        <input type="email" asp-for="mail" />
    </p>
    <p>
        <input type="submit" value="Отправить" />
    </p>

</form>
@model routing_service.Server.Models.Route

<h2>Редактирование маршрута</h2>
<form asp-action="create" asp-controller="route">
    <p>
        <label asp-for="routeName">Название маршрута</label><br />
        <input type="text" asp-for="routeName" />
    </p>
    <p>
        <label asp-for="routeDate">Дата</label><br />
        <input type="date" asp-for="routeDate" />
    </p>
    <p>
        <label asp-for="routeComment">Комментарий к маршруту</label><br />
        <input type="text" asp-for="routeComment" />
    </p>
</form>
